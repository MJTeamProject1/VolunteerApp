<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:elevation="2dp"
        android:gravity="center"
        android:background="@drawable/btn_loading_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ProgressBar
                android:id="@+id/btn_loading_layout_progressbar"
                android:indeterminateTint="@android:color/white"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        <ImageView
                android:id="@+id/btn_loading_layout_iv"
                android:visibility="gone"
                android:background="@drawable/btn_loading_layout_iv"
                android:src="@drawable/ic_baseline_done_24"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        <TextView
                android:id="@+id/btn_loading_layout_tv"
                android:text="로그인"
                android:fontFamily="@font/sd6"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>