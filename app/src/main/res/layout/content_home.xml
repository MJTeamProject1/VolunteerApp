<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/background2">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/sd7"
                android:gravity="center"
                android:textStyle="bold"
                android:text="우리 동네"
                android:textSize="30sp"
                android:textColor="#FFC674"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8" />

        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/sd7"
                android:gravity="center"
                android:text="봉사활동"
                android:textSize="30sp"
                android:textColor="#242221"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.8"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintHorizontal_bias="0.068" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.095"
                app:layout_constraintVertical_bias="0.275"
                app:layout_constraintEnd_toEndOf="parent">
            <TextView
                    android:text="환영합니다. "
                    android:fontFamily="@font/sd5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteY="25dp"
                    tools:layout_editor_absoluteX="17dp" />
            <TextView
                    android:id="@+id/homeNickText"
                    android:text="닉네임"
                    android:fontFamily="@font/sd5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="25dp"
                    tools:layout_editor_absoluteX="94dp" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="120dp"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                        android:id="@+id/firstCard"
                        android:layout_width="wrap_content"
                        android:layout_height="181dp"
                        android:backgroundTint="@color/rv1"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="3dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp">

                    <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                        </androidx.cardview.widget.CardView>


                        <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/PieChartMyVolune22"
                                android:layout_width="546dp"
                                android:layout_height="130dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="-204dp" />


                        <TextView
                                android:id="@+id/mRV_itemText_home"
                                android:layout_width="202dp"
                                android:layout_height="34dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/nanumsquareround"
                                android:text="◼ 봉사 시간 현황"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="142dp"
                                android:layout_alignParentTop="true" />

                        <TextView
                                android:id="@+id/gugun"
                                android:textColor="@color/black"
                                android:layout_width="170dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="140dp"
                                android:layout_marginTop="47dp"
                                android:fontFamily="@font/nanumsquareround"
                                android:text="용인시"
                                android:textSize="20sp"
                                android:layout_alignParentTop="true" />

                        <TextView
                                android:id="@+id/today"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="140dp"
                                android:fontFamily="@font/nanumsquareround"
                                android:text="09월 20일 (목)"
                                android:textSize="28sp"
                                android:layout_marginTop="6dp"
                                android:layout_below="@+id/gugun" />

                        <TextView
                                android:id="@+id/timetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="130dp"
                                android:layout_marginTop="130dp"
                                android:fontFamily="@font/nanumsquareround"
                                android:text="목표 시간 :"
                                android:visibility="invisible"
                                android:textSize="15sp"
                                android:layout_alignParentTop="true" />

                        <TextView
                                android:id="@+id/timeVol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="130dp"
                                android:fontFamily="@font/nanumsquareround"
                                android:text="100"
                                android:visibility="invisible"
                                android:textSize="15sp"
                                android:layout_toEndOf="@+id/timetext"
                                android:layout_alignParentTop="true" />

                        <TextView
                                android:id="@+id/timeVol2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="1dp"
                                android:layout_marginTop="130dp"
                                android:fontFamily="@font/nanumsquareround"
                                android:text="시간"
                                android:visibility="invisible"
                                android:textSize="15sp"
                                android:layout_toEndOf="@+id/timeVol"
                                android:layout_alignParentTop="true" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                    android:layout_marginStart="24dp"
                    android:text="봉사 목록"
                    android:fontFamily="@font/sd4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRecyclerViewHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>