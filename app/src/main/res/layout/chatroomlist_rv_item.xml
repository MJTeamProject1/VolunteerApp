<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/rv2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/vv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@color/rv2"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/chatListRvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:fontFamily="@font/binggrae"
                    android:text="제목"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="20sp" />


            <TextView
                    android:id="@+id/chatListRvUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="작성자"
                    android:textSize="0sp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/nanumsquareround" />


            <TextView
                    android:id="@+id/chatListRvContents"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="내용"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanumsquareround" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="70dp"
                android:background="@color/rv1"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:orientation="vertical">

            <TextView
                    android:layout_weight="1"
                    android:text="인원"
                    android:textSize="15sp"
                    android:fontFamily="@font/binggrae"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/chatCount"
                    android:layout_weight="1"
                    android:text="3명"
                    android:textSize="15sp"
                    android:fontFamily="@font/binggrae"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
